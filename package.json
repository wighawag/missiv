{
  "name": "missiv-monorepo",
  "version": "0.0.0",
  "description": "A server/client for messages",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "ldenv": "^0.3.7",
    "set-defaults": "^0.0.2",
    "syncpack": "^11.2.1"
  },
  "scripts": {
    "prepare": "set-defaults .vscode",
    "preinstall": "npx only-allow pnpm",
    "---------------------- INSTALL ----------------------": "",
    "sync-deps": "syncpack fix-mismatches && pnpm -r format:fix",
    "---------------------- FORMAT ----------------------": "",
    "format": "prettier --write . && pnpm -r format",
    "format:check": "prettier --check . && pnpm -r format:check",
    "---------------------- TEST ----------------------": "",
    "client:test": "pnpm --filter missiv-client test",
    "server:test": "pnpm --filter missiv-server-app test",
    "platform:cf-worker:test": "pnpm --filter missiv-server-cf-worker-base test",
    "test": "pnpm -r test run",
    "---------------------- DEV ----------------------": "",
    "types:dev": "pnpm --filter missiv dev",
    "client:dev:build": "pnpm --filter ./client dev:build",
    "client:dev": "pnpm --filter ./client dev",
    "server:dev": "pnpm --filter missiv-server-app dev",
    "platform:cf-worker:dev": "pnpm --filter missiv-server-cf-worker dev",
    "platform:bun:dev": "pnpm --filter missiv-server-bun dev",
    "---------------------- BUILD ----------------------": "",
    "build": "ldenv pnpm run -r build",
    "client:build": "ldenv pnpm run --filter missiv build && ldenv pnpm run --filter missiv-client build",
    "client:serve": "pnpm --filter missiv-client serve",
    "---------------------- RUN FULL LOCAL SETUP ----------------------": "",
    "stop": "zellij kill-session $npm_package_name",
    "start": "zellij --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name",
    "start:bun": "zellij --layout zellij-bun.kdl a $npm_package_name || zellij --layout zellij-bun.kdl -s $npm_package_name"
  }
}
