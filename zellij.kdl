layout {
	pane split_direction="vertical" {
		pane command="bash"  {
			args "-c" "pnpm types:dev; cd types; ${SHELL-bash}"
		}
		pane command="bash"  {
			args "-c" "pnpm client:dev:build; cd client; ${SHELL-bash}"
		}
		pane command="bash"  {
			args "-c" "pnpm server:dev; cd server/app; ${SHELL-bash}"
		}
	}
	pane split_direction="vertical" {
		pane command="bash"  {
			args "-c" "pnpm platform:cf-worker:dev; cd server/platforms/cf-worker; ${SHELL-bash}"
		}
	}

}
